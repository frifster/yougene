                  "});",
                  "",
                  "// Parse the response body",
                  "const response = pm.response.json();",
                  "",
                  "// Check if the response has monster data",
                  "pm.test('Response has monster data', function () {",
                  "    pm.expect(response).to.have.property('id');",
